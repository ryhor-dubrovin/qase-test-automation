<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="org.tms.utils.tools.AnnotationTransformer"/>
    </listeners>

    <!-- UI Tests-->

    <test name="Login test">
        <classes>
            <class name="org.tms.ui.tests.LoginTest"/>
        </classes>
    </test>

    <test name="Create and delete project test">
        <classes>
            <class name="org.tms.ui.tests.CreateAndDeleteProjectTest"/>
        </classes>
    </test>

    <test name="Create and delete case test">
        <classes>
            <class name="org.tms.ui.tests.CreateAndDeleteCaseTest"/>
        </classes>
    </test>

    <test name="Chat test">
        <classes>
            <class name="org.tms.ui.tests.ChatTest"/>
        </classes>
    </test>

    <!-- API Tests -->

    <test name="Projects Test">
        <classes>
            <class name="org.tms.api.tests.ProjectsTest"/>
        </classes>
    </test>

    <test name="Project With Suite Test">
        <classes>
            <class name="org.tms.api.tests.ProjectWithSuiteTest"/>
        </classes>
    </test>

    <test name="Cases Test">
        <classes>
            <class name="org.tms.api.tests.CasesTest"/>
        </classes>
    </test>

    <test name="Defect Test">
        <classes>
            <class name="org.tms.api.tests.DefectTest"/>
        </classes>
    </test>

</suite>